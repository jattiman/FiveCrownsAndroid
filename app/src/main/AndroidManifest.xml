<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnatti.fivecrownsandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cards"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cards_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GameResultsController"></activity>
        <activity
            android:name=".RoundController"
            android:parentActivityName=".StartScreenController"></activity>
        <activity
            android:name=".CoinTossController"
            android:parentActivityName=".StartScreenController"></activity>
        <activity android:name=".StartScreenController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>
</manifest>